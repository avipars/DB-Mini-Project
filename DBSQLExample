// this is a sql database example of how our db could look like
CREATE TABLE Category_
(
  Cat_id INT NOT NULL,
  Cat_name CHAR NOT NULL,
  Cat_Description CHAR NOT NULL,
  PRIMARY KEY (Cat_id)
);

CREATE TABLE Language_
(
  Lang_Id INT NOT NULL,
  Lang_Name CHAR NOT NULL,
  PRIMARY KEY (Lang_Id)
);

CREATE TABLE Country_of_manufactured_
(
  Cou_Id INT NOT NULL,
  Cou_Name CHAR NOT NULL,
  Address CHAR NOT NULL,
  PRIMARY KEY (Cou_Id)
);

CREATE TABLE Publisher
(
  Fac_Id INT NOT NULL,
  Fac_Name CHAR NOT NULL,
  phone INT NOT NULL,
  website CHAR NOT NULL,
  Cou_Id INT NOT NULL,
  PRIMARY KEY (Fac_Id),
  FOREIGN KEY (Cou_Id) REFERENCES Country_of_manufactured_(Cou_Id)
);

CREATE TABLE Condition_Type
(
  cond_type_Id INT NOT NULL,
  cond_Name CHAR NOT NULL,
  cond_desc CHAR NOT NULL,
  PRIMARY KEY (cond_type_Id)
);

CREATE TABLE Location
(
  loc_Id INT NOT NULL,
  loc_Name CHAR NOT NULL,
  Availability NUMERIC NOT NULL,
  PRIMARY KEY (loc_Id)
);

CREATE TABLE Type
(
  typ_Id INT NOT NULL,
  typ_Name CHAR NOT NULL,
  PRIMARY KEY (typ_Id)
);

CREATE TABLE Author
(
  Aut_Id INT NOT NULL,
  Aut_FullName CHAR NOT NULL,
  Biography CHAR NOT NULL,
  DateOfBirth DATE NOT NULL,
  PRIMARY KEY (Aut_Id)
);

CREATE TABLE Condition_Location
(
  CondLoc_Id INT NOT NULL,
  CoundLoc_Place CHAR NOT NULL,
  CoundLoc_Effect CHAR NOT NULL,
  PRIMARY KEY (CondLoc_Id)
);

CREATE TABLE Books_Description
(
  Description CHAR NOT NULL,
  Description_Id INT NOT NULL,
  PRIMARY KEY (Description_Id)
);

CREATE TABLE Condition
(
  condition_occurance_time DATE,
  time_fixed DATE,
  cond_Id INT NOT NULL,
  cond_type_Id INT NOT NULL,
  CondLoc_Id INT NOT NULL,
  PRIMARY KEY (cond_Id),
  FOREIGN KEY (cond_type_Id) REFERENCES Condition_Type(cond_type_Id),
  FOREIGN KEY (CondLoc_Id) REFERENCES Condition_Location(CondLoc_Id)
);

CREATE TABLE Books
(
  Book_Id INT NOT NULL,
  Pages INT NOT NULL,
  Chapters INT NOT NULL,
  PublicationYear DATE NOT NULL,
  Title CHAR NOT NULL,
  Cat_id INT NOT NULL,
  Description_Id INT NOT NULL,
  Fac_Id INT NOT NULL,
  typ_Id INT NOT NULL,
  Aut_Id INT NOT NULL,
  loc_Id INT NOT NULL,
  Lang_Id INT NOT NULL,
  cond_Id INT NOT NULL,
  PRIMARY KEY (Book_Id),
  FOREIGN KEY (Cat_id) REFERENCES Category_(Cat_id),
  FOREIGN KEY (Description_Id) REFERENCES Books_Description(Description_Id),
  FOREIGN KEY (Fac_Id) REFERENCES Publisher(Fac_Id),
  FOREIGN KEY (typ_Id) REFERENCES Type(typ_Id),
  FOREIGN KEY (Aut_Id) REFERENCES Author(Aut_Id),
  FOREIGN KEY (loc_Id) REFERENCES Location(loc_Id),
  FOREIGN KEY (Lang_Id) REFERENCES Language_(Lang_Id),
  FOREIGN KEY (cond_Id) REFERENCES Condition(cond_Id)
);

CREATE TABLE ISBN
(
  Book_Id INT NOT NULL,
  Cat_id INT NOT NULL,
  typ_Id INT NOT NULL,
  Cou_Id INT NOT NULL,
  Fac_Id INT NOT NULL,
  FOREIGN KEY (Book_Id) REFERENCES Books(Book_Id),
  FOREIGN KEY (Cat_id) REFERENCES Category_(Cat_id),
  FOREIGN KEY (typ_Id) REFERENCES Type(typ_Id),
  FOREIGN KEY (Cou_Id) REFERENCES Country_of_manufactured_(Cou_Id),
  FOREIGN KEY (Fac_Id) REFERENCES Publisher(Fac_Id)
);

CREATE TABLE BookAuthors
(
  Book_Id INT NOT NULL,
  Aut_Id INT NOT NULL,
  FOREIGN KEY (Book_Id) REFERENCES Books(Book_Id),
  FOREIGN KEY (Aut_Id) REFERENCES Author(Aut_Id)
);
